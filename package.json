{
  "name": "zerolock",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon",
    "start": "node src/server.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "format:check": "prettier --check src/**/*.js",
    "db:migrate": "node migrations/runMigrations.js",
    "db:reset": "npm run db:drop && npm run db:create && npm run db:migrate",
    "db:create": "createdb zerolock_dev && createdb zerolock_test",
    "db:drop": "dropdb --if-exists zerolock_dev && dropdb --if-exists zerolock_test"
  },
  "keywords": [
    "javascript",
    "express",
    "nodejs",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "secure-remote-password": "^0.3.1",
    "winston": "^3.17.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.6.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=18"
  }
}
